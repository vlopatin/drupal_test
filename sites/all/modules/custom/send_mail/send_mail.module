// Implements hook_menu()

function send_mail_menu() {
  $items = array();
  $items['send_mail_page'] = array(
    'title' => 'Send mail',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('send_mail_form'),
    'access callback' => TRUE,
  );
  return $items;
}

function send_mail_form() {

  $form = array();

  $form['to'] = array(
    '#type' => 'fieldset',
    '#title' => 'To',
  );

  $form['to']['greeting'] = array(
    '#type' => 'select',
    '#options' => array('Sir', 'Mr.', 'Madam', 'Ms.'),
  );

  $form['to']['name'] = array(
    '#type' => 'textfield',
    '#title' => t('Name'),
    '#size' => 20,
  );

  $form['to']['email'] = array(
    '#type' => 'textfield',
    '#title' => t('Email'),
    '#size' => 20,
  );

  $form['message'] = array(
    '#type' => 'fieldset',
    '#title' => 'Message',
  );

  $form['message']['subject'] = array(
    '#type' => 'textfield',
    '#title' => t('Subject'),
    '#size' => 20,
  );


  $form['message']['body'] = array(
    '#type' => 'text_format',
    '#title' => t('Body'),
    '#size' => 200,
  );

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Send message'),
  );
  return $form;
}

// Validate function for send_mail_form
function send_mail_form_validate($form, &$form_state) {
  $mail = $form_state['values']['email'];
  if (!valid_email_address($mail)) {
    form_set_error('email', t('The email address appears to be invalid.'));
  }
}

